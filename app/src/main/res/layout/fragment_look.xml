<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/white"
        android:overScrollMode="never"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:clipToPadding="false"

           >
            <TextView
                android:id="@+id/look_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="35dp"
                android:text="둘러보기"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/look_buttonbar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/look_title_tv"

                >

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"

                    >

                    <android.widget.Button
                        android:background="@drawable/round_corner"
                        android:id="@+id/look_chart_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"

                        android:text="차트"

                        android:backgroundTint="@color/dark_blue"

                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"

                      />

                    <android.widget.Button
                        android:id="@+id/look_video_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/round_corner"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:text="영상"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/look_chart_btn"
                        app:layout_constraintTop_toTopOf="@+id/look_chart_btn"

                        />

                    <android.widget.Button
                        android:id="@+id/look_genre_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toEndOf="@+id/look_video_btn"
                        app:layout_constraintTop_toTopOf="@+id/look_chart_btn"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_corner"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:text="장르"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                       />

                    <android.widget.Button
                        android:id="@+id/look_situation_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_corner"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:text="상황"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@+id/look_chart_btn"
                        app:layout_constraintStart_toEndOf="@+id/look_genre_btn"
                         />

                    <android.widget.Button
                        android:id="@+id/look_mood_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_corner"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:text="분위기"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/look_situation_btn"
                        app:layout_constraintTop_toTopOf="@+id/look_chart_btn"  />

                    <android.widget.Button
                        android:id="@+id/look_audio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/round_corner"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:text="오디오"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/look_mood_btn"
                        app:layout_constraintTop_toTopOf="@+id/look_chart_btn"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/btn_arrow_more"
                app:layout_constraintStart_toEndOf="@+id/look_chart_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/look_buttonbar_view" />

            <TextView
                android:id="@+id/look_chart_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:text="차트"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/look_buttonbar_view" />

            <androidx.cardview.widget.CardView
                android:id="@+id/look_chart_cd"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/look_chart_title_tv"
                tools:layout_editor_absoluteX="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/look_chartList_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/look_chart_exp_tv">

                        <GridLayout
                            android:id="@+id/look_chart_item_01_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="4"
                            android:rowCount="2">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_columnSpan="1"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:background="@drawable/round_corner"
                                android:src="@drawable/img_album_exp2" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginLeft="13dp"
                                android:layout_rowSpan="2"
                                android:text="1"
                                android:paddingTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="13dp"
                                android:layout_row="0"
                                android:paddingTop="7dp"
                                android:textColor="@color/black"
                                android:text="잠이안온다"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/btn_miniplayer_play" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="13dp"
                                android:text="젠(zen)"
                                android:textSize="11sp"
                                />


                        </GridLayout>

                        <GridLayout
                            android:id="@+id/look_chart_item_02_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:columnCount="4"
                            android:rowCount="2"

                            >

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_columnSpan="1"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/img_album_exp2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginLeft="13dp"
                                android:layout_rowSpan="2"
                                android:text="2"
                                android:paddingTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="13dp"
                                android:layout_row="0"
                                android:paddingTop="7dp"
                                android:textColor="@color/black"
                                android:text="잠이안온다"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/btn_miniplayer_play" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="13dp"
                                android:text="젠(zen)"
                                android:textSize="11sp"
                                 />

                        </GridLayout>

                        <GridLayout
                            android:id="@+id/look_chart_item_03_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:columnCount="4"
                            android:rowCount="2">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_columnSpan="1"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/img_album_exp2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginLeft="13dp"
                                android:layout_rowSpan="2"
                                android:text="3"
                                android:paddingTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="13dp"
                                android:layout_row="0"
                                android:paddingTop="7dp"
                                android:text="잠이안온다"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/btn_miniplayer_play" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="13dp"
                                android:text="젠(zen)"
                                android:textSize="11sp"
                                 />

                        </GridLayout>

                        <GridLayout
                            android:id="@+id/look_chart_item_04_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:columnCount="4"
                            android:rowCount="2">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_columnSpan="1"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/img_album_exp2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginLeft="13dp"
                                android:layout_rowSpan="2"
                                android:text="4"
                                android:paddingTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="13dp"
                                android:layout_row="0"
                                android:paddingTop="7dp"
                                android:text="잠이안온다"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/btn_miniplayer_play" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_gravity="fill"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="13dp"
                                android:text="젠(zen)"
                                android:textSize="11sp" />

                        </GridLayout>

                        <GridLayout
                            android:id="@+id/look_chart_item_05_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="5dp"
                            android:columnCount="4"
                            android:rowCount="2">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_columnSpan="1"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/img_album_exp2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginLeft="13dp"
                                android:layout_rowSpan="2"
                                android:text="5"
                                android:paddingTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_gravity="fill"
                                android:layout_marginLeft="13dp"
                                android:layout_row="0"
                                android:paddingTop="7dp"
                                android:text="잠이안온다"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_rowSpan="2"
                                android:src="@drawable/btn_miniplayer_play" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="13dp"
                                android:text="젠(zen)"
                                android:textSize="11sp"
                                 />

                        </GridLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="19시 기준"
                        android:textColor="@color/light_gray"
                        android:textSize="10sp"
                        android:paddingBottom="5dp"
                        app:layout_constraintBottom_toBottomOf="@id/look_flochart_tv"
                        app:layout_constraintStart_toEndOf="@+id/look_flochart_tv" />
                    />

                    <TextView
                        android:id="@+id/look_allListen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="13dp"
                        android:text="전체듣기"
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@id/look_flochart_tv"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_browse_arrow_right"
                        app:layout_constraintEnd_toStartOf="@+id/look_allListen_tv"
                        app:layout_constraintTop_toTopOf="@+id/look_allListen_tv"
                        android:layout_marginTop="1dp"
                        />


                    <TextView
                        android:id="@+id/look_chart_exp_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="4dp"
                        android:text="최근 24시간 집계/FLO 최고 인기곡 차트!"
                        android:textColor="@color/light_gray"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/look_flochart_tv" />

                    <TextView

                        android:id="@+id/look_flochart_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="FLO 차트"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="26dp"
                android:src="@drawable/btn_arrow_more"
                app:layout_constraintStart_toEndOf="@+id/look_video_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/look_chart_cd" />

            <TextView
                android:id="@+id/look_video_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:text="영상"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/look_chart_cd" />


            <HorizontalScrollView
                android:scrollbars="none"
                android:id="@+id/look_video_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@+id/look_video_title_tv"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/look_chartList_layout"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/look_video_card_01_cd"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/look_video_epx_01_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintTop_toTopOf="@id/look_video_card_01_cd"
                            app:layout_constraintStart_toStartOf="@id/look_video_card_01_cd"
                            app:layout_constraintEnd_toEndOf="@id/look_video_card_01_cd"
                            app:layout_constraintBottom_toBottomOf="@id/look_video_card_01_cd"
                            android:src="@drawable/img_video_exp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/round_corner"
                            />



                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/look_video_exp_01_text_01_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제목"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/look_video_card_01_cd"
                        app:layout_constraintTop_toBottomOf="@+id/look_video_card_01_cd"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/look_video_exp_01_text_02_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가수"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/look_video_exp_01_text_01_tv"
                        app:layout_constraintTop_toBottomOf="@+id/look_video_exp_01_text_01_tv"
                        android:layout_marginTop="4dp"

                        />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/look_video_card_02_cd"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/look_video_card_01_cd"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="8dp">

