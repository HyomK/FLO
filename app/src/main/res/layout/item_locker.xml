<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/item_locker_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:columnCount="4"
        android:layout_marginVertical="10dp"
        android:rowCount="2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/locker_item_layout"
            android:background="@drawable/locker_iv_background"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_height="wrap_content">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/locker_item_cover_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/locker_iv_background"
                android:src="@drawable/img_album_exp2" />
        </androidx.constraintlayout.widget.ConstraintLayout>




        <TextView
            android:id="@+id/locker_item_title_tv"
            android:layout_rowSpan="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_marginLeft="13dp"
            android:layout_row="0"
            android:paddingTop="7dp"
            android:textColor="@color/black"
            android:text="Lilac"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:src="@drawable/btn_miniplayer_play" />


        <ImageView
            android:id="@+id/locker_fr_menu_btn"
            android:layout_columnSpan="1"
            android:layout_rowSpan="2"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"
            android:src="@drawable/btn_player_more"/>
        <TextView
            android:id="@+id/locker_item_singer_tv"
            android:layout_rowSpan="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="13dp"
            android:text="IU"
            android:textSize="12sp"
            />




    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>