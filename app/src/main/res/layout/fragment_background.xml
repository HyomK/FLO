<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/bg_fr_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_4_x_1"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_home_settingBar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:id="@+id/bg_home_btn_setting_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_main_setting"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                />
            <ImageView
                android:id="@+id/bg_home_btn_ticket_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_main_ticket"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/bg_home_btn_setting_iv"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp"
                android:layout_marginEnd="20dp"
                />
            <ImageView
                android:id="@+id/bg_home_btn_nugu_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_nugu"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/bg_home_btn_ticket_iv"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="15dp"
                android:layout_marginEnd="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            app:layout_constraintTop_toBottomOf="@+id/bg_home_settingBar_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bg_home_title_tv"
            android:layout_height="wrap_content"
            android:layout_width="270dp"
            android:text="포근하게 덮어주는 꿈의 목소리"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            />
        <ImageView
            android:id="@+id/bg_home_btn_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_panel_play_large"
            app:layout_constraintTop_toBottomOf="@+id/bg_home_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            />


        <ImageView
            android:id="@+id/bg_home_album_epx_01_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toTopOf="@+id/bg_home_album_epx_02_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:id="@+id/bg_home_album_exp_01_text_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butter"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/bg_home_album_epx_01_iv"
            app:layout_constraintTop_toTopOf="@+id/bg_home_album_epx_01_iv"
            app:layout_constraintBottom_toTopOf="@+id/bg_home_album_exp_01_text_02_tv"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/bg_home_album_exp_01_text_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTS"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/bg_home_album_epx_01_iv"
            app:layout_constraintBottom_toBottomOf="@+id/bg_home_album_epx_01_iv"
            app:layout_constraintTop_toBottomOf="@+id/bg_home_album_exp_01_text_01_tv"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/bg_home_album_epx_02_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp2"
            app:layout_constraintBottom_toBottomOf="@+id/bg_fr_img_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/bg_home_album_exp_02_text_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LILAC"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/bg_home_album_epx_02_iv"
            app:layout_constraintTop_toTopOf="@+id/bg_home_album_epx_02_iv"
            app:layout_constraintBottom_toTopOf="@+id/bg_home_album_exp_02_text_02_tv"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/bg_home_album_exp_02_text_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/bg_home_album_epx_02_iv"
            app:layout_constraintBottom_toBottomOf="@+id/bg_home_album_epx_02_iv"
            app:layout_constraintTop_toBottomOf="@+id/bg_home_album_exp_02_text_01_tv"
            android:layout_marginStart="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bg_home_album_epx_01_iv"
            app:layout_constraintStart_toStartOf="@id/bg_home_album_epx_01_iv"
            android:text="총 63곡 2019.09.05"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>