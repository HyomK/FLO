<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginVertical="15dp"
            android:id="@+id/chart_item_layout"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/chart_item_cover_cd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="3dp"
                >
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/chart_item_cover_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/locker_iv_background"
                android:src="@drawable/img_album_exp2" />
            </androidx.cardview.widget.CardView>

        <TextView

            android:id="@+id/chart_item_position_tv"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="1"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/chart_item_cover_cd"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:id="@+id/chart_item_title_tv"
            android:layout_rowSpan="1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_marginLeft="13dp"
            android:layout_row="0"
            android:paddingTop="7dp"
            android:textColor="@color/black"
            android:text="Lilac"
            app:layout_constraintStart_toEndOf="@id/chart_item_position_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/chart_item_title_tv"
            android:src="@drawable/btn_miniplayer_play" />


        <TextView
            android:id="@+id/chart_item_singer_tv"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="13dp"
            android:text="IU"
            app:layout_constraintStart_toEndOf="@id/chart_item_position_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>